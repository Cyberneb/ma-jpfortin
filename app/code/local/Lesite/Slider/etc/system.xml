<?xml version="1.0"?>
<!--
/**
 * Le Site custom slider
 */
-->
<config>
	<tabs>
		<lesite translate="label comment" module="slider">
	            <label>Le Site Slider</label>
	            <sort_order>500</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
		</lesite>
	</tabs>
    <sections>
        <slider translate="label comment" module="slider">
            <tab>Le Site</tab>
            <label>Slider</label>
            <frontend_type>text</frontend_type>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label comment" module="slider">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                          <label>Enabled</label>
                          <frontend_type>select</frontend_type>
                          <source_model>adminhtml/system_config_source_yesno</source_model>
                          <sort_order>10</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                        </enabled>
                        <max_upload_filesize translate="label comment">
                            <label>Uploaded file max size (bytes)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-digits required-entry</validate>
                            <comment><![CDATA[Must be less then upload_max_filesize and post_max_size in php.ini]]></comment>
                        </max_upload_filesize>
                        <allowed_extensions translate="label comment">
                            <label>Allowed extensions</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Comma separated file extensions.&lt;br /&gt; Example, &quot; jpg,gif,png &quot;]]></comment>
                        </allowed_extensions>                                           
                    </fields>
                </general>
            </groups>
        </slider>
    </sections>
</config>
