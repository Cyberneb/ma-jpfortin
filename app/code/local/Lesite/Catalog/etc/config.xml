<?xml version="1.0"?>
<config>
    <modules>
        <Lesite_Catalog>
            <version>1.0.0.0</version>
        </Lesite_Catalog>
    </modules>
    <global>
        <helpers>
            <lesite_catalog>
                <class>Lesite_Catalog_Helper</class>
            </lesite_catalog>
        </helpers>
        <blocks>
            <lesite_catalog>
                <class>Lesite_Catalog_Block</class>
            </lesite_catalog>
            <catalog>
                <rewrite>
                    <product_view_media>Lesite_Catalog_Block_Product_View_Media</product_view_media>
                    <product_view_type_configurable>Lesite_Catalog_Block_Product_View_Type_Configurable</product_view_type_configurable>
                </rewrite>
            </catalog>
        </blocks>
        <models>
            <lesite_catalog>
                <class>Lesite_Catalog_Model</class>
                <resourceModel>lesite_catalog_resource</resourceModel>
            </lesite_catalog>
            <lesite_catalog_resource>
                <class>Lesite_Catalog_Model_Resource</class>
                <entities>
                    <color_image>
                        <table>lesite_product_color_image</table>
                    </color_image>
                </entities>
            </lesite_catalog_resource>
        </models>
        <resources>
            <lesite_catalog_setup>
                <setup>
                    <module>Lesite_Catalog</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </lesite_catalog_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <catalog>
                <args>
                    <modules>
                        <lesite_catalog before="Mage_Catalog">Lesite_Catalog</lesite_catalog>
                    </modules>
                </args>
            </catalog>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <lesite_catalog before="Mage_Adminhtml">Lesite_Catalog_Adminhtml</lesite_catalog>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <lesite_catalog>
                    <file>color.xml</file>
                </lesite_catalog>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <cataloginventory>
            <options>
                <in_stock_left_qty>10</in_stock_left_qty>
            </options>
        </cataloginventory>
    </default>
</config>
