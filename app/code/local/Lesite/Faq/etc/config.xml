<?xml version="1.0" encoding="UTF-8"?>
<!--
FAQ Module by Lesite
Each line should be prefixed with 
-->


<config>
    <modules>
        <Lesite_Faq>
            <version>1.0.0.0</version>
        </Lesite_Faq>
    </modules>
    <global>
        <helpers>
            <lesite_faq>
                <class>Lesite_Faq_Helper</class>
            </lesite_faq>
        </helpers>
        <models>
            <faq>
                <class>Lesite_Faq_Model</class>
                <resourceModel>faq_resource</resourceModel>
            </faq>
            <faq_resource>
                <class>Lesite_Faq_Model_Resource</class>
                <entities>
                    <item>
                        <table>lesite_faq_item</table>
                    </item>
                    <category>
                        <table>lesite_faq_category</table>
                    </category>
                </entities>
            </faq_resource>
        </models>
         <resources>
            <faq_setup>
                <setup>
                    <module>Lesite_Faq</module>
                    <class>Lesite_Faq_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faq_setup>
        </resources>
        <blocks>
            <lesite_faq>
                <class>Lesite_Faq_Block</class>
            </lesite_faq>
        </blocks>
        <events>
            <before_faq_item_display>
                <observers>
                    <lesite_faq>
                        <class>lesite_faq/observer</class>
                        <method>beforeFaqDisplayed</method>
                    </lesite_faq>
                </observers>
            </before_faq_item_display>
        </events>
    </global>
     <frontend>
        <routers>
            <lesite_faq>
                <use>standard</use>
                <args>
                    <module>Lesite_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </lesite_faq>
        </routers>
        <layout>
            <updates>
                <lesite_faq>
                    <file>lesite_faq.xml</file>
                </lesite_faq>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Lesite_Faq before="Mage_Adminhtml">Lesite_Faq_Adminhtml</Lesite_Faq>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <lesite_faq>
                    <file>lesite_faq.xml</file>
                </lesite_faq>
            </updates>
        </layout>
        <menu>
            <cms>
                <children>
                    <faq translate="title" module="lesite_faq"> 
                        <title>FAQ</title>
                        <sort_order>65</sort_order>
                        <children>
                            <category translate="title" module="lesite_faq">
                                <title>FAQ Categories</title> 
                                <action>adminhtml/faq_category</action> 
                                <sort_order>50</sort_order>
                            </category>
                            <item translate="title" module="lesite_faq">
                                <title>FAQ Items</title> 
                                <action>adminhtml/faq</action> 
                                <sort_order>51</sort_order>
                            </item>
                        </children>
                    </faq>
                </children>
            </cms>        
        </menu>
    </adminhtml>
    <default>
        <faq>
            <view>
                <enabled>1</enabled>
                <items_per_page>10</items_per_page>
            </view>
        </faq>
    </default>
</config>
