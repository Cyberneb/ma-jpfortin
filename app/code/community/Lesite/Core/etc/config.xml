<?xml version="1.0"?>
<config>
    <modules>
        <Lesite_Core>
            <version>0.1.0</version>
        </Lesite_Core>
    </modules>
    <global>
        <helpers>
            <core>
                <rewrite>
                    <js>Lesite_Core_Helper_Js</js>
                </rewrite>
            </core>
        </helpers>
        <models>
            <lesite_core>
                <class>Lesite_Core_Model</class>
            </lesite_core>
        </models>
    </global>
    <frontend>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <popup_request_observer>
                        <class>lesite_core/observer</class>
                        <method>detectAjaxRequest</method>
                    </popup_request_observer>
                </observers>
            </controller_action_layout_load_before>
        </events>
    </frontend>
</config>
